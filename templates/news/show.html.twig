{% extends 'base.html.twig' %}

{% block title %} {{ news.title }} {% endblock %}

{% block body %}
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-body">
            <h4>{{ news.title }}</h2>
            <h6>{{ news.shortdescription }}</h4>
            {% if news.img %}
                <img src="{{ news.img }}" class="img-fluid">
            {% endif %}
            
            {{ news.article|raw }}
            <a href="{{ news.href }}" class="card-link btn btn-success">Оригинальная статья</a>
          </div>
        </div>  
      </div>
    </div>
  </div>
{% endblock %}